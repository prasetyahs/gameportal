<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('template/head'); -%>
</head>

<body>
    <%- include('template/header'); -%>
        <div class="container-fluid content">
            <div class="d-flex flex-sm-row flex-wrap justify-content-between" id="body-content" style="width: 100%;">
                <%- include('template/sideleft') -%>
                    <!-- content -->
                    <div class="card rounded-0 border border-primary">
                        <div class="card-body" style="width:33rem">
                            <div class="container pt-1 pb-1 mb-1 p-bcolor">
                                <h4 style="color:white">Register</h4>
                            </div>
                            <div class="d-flex flex-sm-column flex-wrap pl-3 pr-3 mt-4">
                                <!-- @if($message = Session::get('message'))
                                <div class="alert alert-success" role="alert">
                                    {{$message}}
                                </div>
                                @endif @if($failed = Session::get('failed'))
                                <div class="alert alert-danger" role="alert">
                                    {{$failed}}
                                </div>
                                @endif -->
                                
                                <% if(status && status !=null){ %>
                                    <div class="alert alert-info" role="alert">
                                <% }else if(!status && status !=null){ %>
                                    <div class="alert alert-danger" role="alert">
                                <% } %>
                                    <%= err %> 
                                    </div>
                                <form action="/usersregister" method="post">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <div class="d-flex flex-sm-row flex-wrap justify-content-between">
                                        <label for="username">Username</label>
                                        <input type="text" class="form-control input-text" name="username" id="username"
                                            required>
                                    </div>
                                    <div class="d-flex flex-sm-row flex-wrap justify-content-between">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control input-text" name="email" id="email"
                                            required>
                                    </div>
                                    <div class="d-flex flex-sm-row flex-wrap justify-content-between">
                                        <label for="password">Password</label>

                                        <input type="password" class="form-control input-text" name="password"
                                            id="password" required>
                                    </div>
                                    <div class="d-flex flex-sm-row flex-wrap justify-content-between">
                                        <label for="gender">Gender</label>
                                        <div class="gender-select">
                                            <div class="form-check form-check-inline">
                                                <label class="form-check-label" for="inlineRadio1">Male</label>
                                                <input class="form-check-input" type="radio" name="gender"
                                                    id="inlineRadio1" value="Male">
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <label class="form-check-label" for="inlineRadio2">Female</label>
                                                <input class="form-check-input" type="radio" name="gender"
                                                    id="inlineRadio2" value="Female">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-sm-row flex-wrap justify-content-between">
                                        <label for="birth">Birth</label>
                                        <input type="date" class="form-control input-text" name="birth" id="birth"
                                            required>
                                    </div>
                                    <div class="d-flex flex-sm-row flex-wrap justify-content-between">
                                        <label for="pin">Pin Code</label>
                                        <input type="password" class="form-control input-text" name="pin_code"
                                            id="pin_code" required>
                                    </div>
                                    <div class="d-flex flex-sm-row flex-wrap justify-content-between mb-3">
                                        <div class="captcha" id="captcha">
                                            <span>
                                                <%- captcha -%>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control input-text mt-3" name="captcha" required>
                                    </div>
                                    <div class="d-flex flex-sm-row flex-wrap justify-content-center">
                                        <button type="submit" class="btn mr-1 text-white p-bcolor">register</button>
                                        <button class="btn ml-1 text-white"
                                            style="background-color: #dc3545;;">Reset</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <%- include('template/sideright') -%>
            </div>
        </div>

        <%- include('template/foot'); -%>
</body>

</html>