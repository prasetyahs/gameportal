<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('template/head'); -%>
</head>

<body>
    <%- include('template/header'); -%>
        <div class="container-fluid content">
            <div class="d-flex flex-sm-row flex-wrap justify-content-between" id="body-content">
                <%- include('template/sideleft') -%>
                    <!-- content -->
                    <div class="d-flex flex-sm-column">
                        <div class="border-primary border bg-white rounded mb-2">
                            <div class="card-body" style="width:33rem">
                                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner">
                                        <% for (var i=0; i< banner.length; i++) { %>
                                            <div class="carousel-item active">
                                                <img src="<%= banner[i]['banner_image'] %>" class="d-block w-100"
                                                    alt="..." id="banner">
                                            </div>
                                            <% } %>
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                        data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                        data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="container information border-primary border bg-white rounded p-3">
                            <div class="d-flex flex-sm-row  justify-content-center">
                                <h5 class="p-tcolor">Event</h5>
                            </div>
                            <div class="d-flex flex-sm-row justify-content-between">
                                <% for(let i=0; i< event.length; i++){ var d=new Date( event[i]['event_date']); %>
                                    <div class="d-flex flex-sm-column">
                                        <a href="" class="p-tcolor">
                                            <%= event[i]['event_name'] %>
                                        </a>
                                        <p>
                                            <%= d.toDateString() %>
                                        </p>
                                    </div>
                                    <% } %>
                            </div>
                            <a href="" class="float-right p-tcolor">See More</a>

                        </div>
                    </div>
                    <%- include('template/sideright') -%>
            </div>
        </div>

        <%- include('template/foot'); -%>
</body>

</html>